{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx":"react",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noEmit": true,
    "importsNotUsedAsValues": "remove",
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
